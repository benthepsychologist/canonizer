{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for output from the finalform scoring callable. Contains scored observations from a measurement event.",
  "self": {
    "vendor": "org.canonical",
    "name": "finalform_output",
    "format": "jsonschema",
    "version": "1-0-0"
  },
  "type": "object",
  "properties": {
    "measurement_event_id": {
      "type": "string",
      "description": "Reference to the source measurement event"
    },
    "subject_id": {
      "type": "string",
      "description": "Identifier of the subject"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the measurement occurred"
    },
    "observations": {
      "type": "array",
      "description": "Array of scored observations",
      "items": {
        "type": "object",
        "properties": {
          "measure_id": {
            "type": "string",
            "description": "Identifier for the measure (e.g., phq9, gad7)",
            "examples": [
              "phq9",
              "gad7",
              "pcl5"
            ]
          },
          "components": {
            "type": "array",
            "description": "Component scores and values",
            "items": {
              "type": "object",
              "properties": {
                "component_id": {
                  "type": "string",
                  "description": "Component identifier"
                },
                "value": {
                  "description": "Component value",
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "label": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "description": "Human-readable label"
                }
              },
              "required": [
                "component_id",
                "value"
              ]
            }
          }
        },
        "required": [
          "measure_id",
          "components"
        ]
      }
    },
    "source": {
      "type": "object",
      "description": "Source tracking information",
      "properties": {
        "form_correlation_id": {
          "type": [
            "string",
            "null"
          ],
          "description": "Correlation ID for deriving observation keys"
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "measurement_event_id",
    "subject_id",
    "timestamp",
    "observations"
  ],
  "additionalProperties": true
}