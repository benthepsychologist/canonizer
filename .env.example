# GCP Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# GCS Buckets (RAW storage)
GCS_RAW_BUCKET=your-project-canonizer-raw
GCS_DLQ_BUCKET=your-project-canonizer-dlq

# BigQuery Datasets
BQ_DATASET_STAGED=canonizer_staged
BQ_DATASET_CANONICAL=canonizer_canonical
BQ_DATASET_AUDIT=canonizer_audit

# Service Account (optional - leave empty to use default credentials)
GOOGLE_APPLICATION_CREDENTIALS=

# Pub/Sub Topics (optional - for event bus export)
PUBSUB_ENABLED=false
PUBSUB_TOPIC_EMAIL_RECEIVED=canonizer.email.received.v1
PUBSUB_TOPIC_EMAIL_SENT=canonizer.email.sent.v1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# Connector-specific settings
# Gmail
GMAIL_CREDENTIALS_PATH=~/.config/gmail/credentials.json
GMAIL_TOKEN_PATH=~/.config/gmail/token.json

# Outlook/Exchange
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_TENANT_ID=

# Development
ENV=development
DEBUG=true
